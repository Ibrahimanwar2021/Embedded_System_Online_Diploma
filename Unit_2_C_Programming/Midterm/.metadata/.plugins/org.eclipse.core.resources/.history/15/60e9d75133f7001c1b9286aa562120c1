#include <stdio.h>
#include <math.h>

int main()
{
    double num, root;

    printf("Enter a number to find its square root: ");
    fflush(stdout); fflush(stdin);
    scanf("%lf", &num);
    root = sqrt(num);
    printf("The square root of %.0lf = %.3lf", num, root);

    return 0;
}

