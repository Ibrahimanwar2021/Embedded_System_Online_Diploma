#include <stdio.h>

int sum(int num)
{
    while(num>0)
        return num+sum(num-1);
    return 0;
}

int main()
{
    int num;
    printf("enter a number: ");
    fflush(stdout);
    scanf("%d",&num);
    printf("The sum of numbers of 1 to %d is %d",num,sum(num));
    return 0;
}
