#include<stdio.h>

int main()
{
    int num, rem, sum = 0;

    printf(""Enter a number to reverse\n");
    fflush(stdout);	fflush(stdin);
    scanf("%d", &num);
    while(num != 0)
    {
        rem = num % 10;
        printf("%d", rem);
        num = num / 10;
    }
    return 0;
}

