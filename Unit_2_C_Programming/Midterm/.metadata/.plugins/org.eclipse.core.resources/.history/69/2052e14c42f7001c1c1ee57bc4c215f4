#include<stdio.h>

int main()
{
    int n, rem, sum = 0;

    printf("Enter a number: ");
    fflush(stdout);	fflush(stdin);
    scanf("%d", &n);

    while(n != 0)
    {
        rem = n % 10;
        printf("%d", rem);
        n = n / 10;
    }

    return 0;
}
