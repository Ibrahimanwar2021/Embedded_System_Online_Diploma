# include "stdio.h"

int main ()
{
	    int num;
		int factorial = 1;

		printf("Enter an integer: ");
		fflush(stdout); fflush(stdin);
		scanf("%d",&num);


		if (num>0){
			int i;
			for (i =1 ; i<=num ; i++){
				factorial*=i;
			}
			printf("Factorial = %d",factorial);}
		else
			printf("Error!!! Factorial of negative number doesn't exist");
}

